{
  "name": "sfdx-starter",
  "private": true,
  "version": "1.0.0",
  "description": "sfdx-starter",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "scratch:create": "sf org create scratch -v ALIAS_OF_YOUR_DEBHUB -f config/project-scratch-def.json -a ALIAS_FOR_SCRATCH_ORG -y 30 -w 10",
    "dev": "lwr dev",
    "test": "npm run test:unit",
    "test:unit": "sfdx-lwc-jest",
    "test:unit:watch": "sfdx-lwc-jest --watch",
    "test:unit:debug": "sfdx-lwc-jest --debug",
    "test:unit:coverage": "sfdx-lwc-jest --coverage",
    "lint": "npm run lint:lwc",
    "lint:lwc": "eslint force-app/main/default/lwc"
  },
  "devDependencies": {
    "@lukethacoder/lwc-module-resolver": "^3.0.0",
    "@lwc/engine-dom": "^3.0.0",
    "@lwc/synthetic-shadow": "^3.0.0",
    "@lwrjs/client-modules": "^0.9.4",
    "@lwrjs/loader": "^0.9.4",
    "@lwrjs/o11y": "^0.9.4",
    "@lwrjs/router": "^0.9.4",
    "@prettier/plugin-xml": "2.2.0",
    "@salesforce/eslint-config-lwc": "^3.4.0",
    "@salesforce/sfdx-lwc-jest": "^1.3.0",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "lwc": "^3.0.0",
    "lwr": "^0.9.4",
    "prettier": "^2.8.6",
    "prettier-plugin-apex": "^1.12.0"
  },
  "pnpm": {
    "overrides": {
      "@lwc/module-resolver": "npm:@lukethacoder/lwc-module-resolver"
    }
  },
  "lint-staged": {
    "**/*.{css,html,js,json,md,yaml,yml}": [
      "prettier --write"
    ],
    "**/lwc/**/*.js": [
      "eslint --cache --fix"
    ]
  }
}
