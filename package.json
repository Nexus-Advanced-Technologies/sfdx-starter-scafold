{
  "name": "sfdx-starter",
  "private": true,
  "version": "1.0.0",
  "description": "sfdx-starter",
  "type": "module",
  "pnpm": {
    "overrides": {
      "@lwc/module-resolver": "$@lukethacoder/lwc-module-resolver"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "dev": "npx @lwc-garden/core dev",
    "scratch:create": "sf org create scratch -v ALIAS_OF_YOUR_DEBHUB -f config/project-scratch-def.json -a ALIAS_FOR_SCRATCH_ORG -y 30 -w 10",
    "test": "jest --no-cache",
    "test:watch": "jest --watch",
    "test:debug": "jest --debug",
    "lint": "npm run lint:lwc",
    "lint:lwc": "eslint force-app/main/default/lwc"
  },
  "devDependencies": {
    "@lukethacoder/lwc-module-resolver": "^4.0.1",
    "@lukethacoder/lwc-webpack-plugin": "^4.1.1",
    "@lwc-garden/core": "^0.0.2",
    "@lwc/compiler": "^6.3.4",
    "@lwc/engine-dom": "^6.3.4",
    "@lwc/engine-server": "^6.3.4",
    "@lwc/jest-preset": "^14.1.0",
    "@lwc/jest-shared": "^14.1.0",
    "@lwc/jest-transformer": "^14.1.0",
    "@lwc/synthetic-shadow": "^6.3.4",
    "@prettier/plugin-xml": "3.3.1",
    "@salesforce/eslint-config-lwc": "^3.5.2",
    "@salesforce/sfdx-lwc-jest": "^3.0.0",
    "@salesforce/wire-service-jest-util": "^4.0.2",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "eslint": "^8.44.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "lint-staged": "^15.0.0",
    "lwc": "^6.3.4",
    "lwr": "^0.11.0",
    "prettier": "^3.0.0",
    "prettier-plugin-apex": "^2.0.1"
  },
  "lint-staged": {
    "**/*.{css,html,js,json,md,yaml,yml}": [
      "prettier --write"
    ],
    "**/lwc/**/*.js": [
      "eslint --cache --fix"
    ]
  }
}
